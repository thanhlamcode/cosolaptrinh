using System;
using System.Data;
using System.Data.SqlClient;

class Program
{
    static void Main()
    {
        string connectionString = "your_connection_string_here";
        // Thay 'your_connection_string_here' bằng chuỗi kết nối thực tế của bạn

        using (SqlConnection connection = new SqlConnection(connectionString))
        {
            connection.Open();

            // Tính tổng trung bình cộng của trường [dbo].[CMT][rating]
            string query = "UPDATE [dbo].[MOVIE] SET [rating] = (SELECT AVG([rating]) FROM [dbo].[CMT])";

            using (SqlCommand command = new SqlCommand(query, connection))
            {
                int rowsAffected = command.ExecuteNonQuery();
                Console.WriteLine($"Số dòng bị ảnh hưởng: {rowsAffected}");
            }
        }
    }
}
